$slider_min_height = 650px









//////////////////////////////////////////////////////////////////////////////
// 
// 1.0 - Main Selector
// 			This class is added to the target container on init()
// 
//////////////////////////////////////////////////////////////////////////////


.vineslider-container
	






	position relative
	min-height $slider_min_height
	box-sizing border-box
	

//////////////////////////////////////////////////////////////////////////////
// 
// 2.0 - Navigation
// 			This is generated markup
// 
//////////////////////////////////////////////////////////////////////////////


	.vs-navigation
		position absolute
		bottom 0
		width 100%
		justify-content center
		display flex
		





		.vs-prev-btn
		.vs-next-btn
			position absolute
			cursor pointer
			opacity 0.6
			transition 0.5s all
			
			&:hover
				opacity 1
				transition 0.3s all
				
			.fa
				top -340px
				position absolute
				font-size 30px
				color #000
				



		.vs-prev-btn
			left -32px
		.vs-next-btn
			right -10px
		.vs-nav-dot
			cursor pointer
			box-shadow inset 0 0 4px rgba(0,0,0,0.5)
			margin 5px
			height 12px
			width 12px
			display inline-block
			background-color rgba(0,0,0,.1)
			border-radius 50%
			transition 0.3s all
			&:hover
				box-shadow inset 0 0 4px 2px #000
				transition 0.3s all
			&.vs-shown
				box-shadow inset 0 0 4px 4px #000
				background-color rgba(#000,0.8)
				

	.vs-slideshow
		position relative
		width 100%
		margin 0
		.vs-slide
			opacity 0
			position absolute
			list-style none
			width 100%
			transition 0.5s all
			left 0
			img
				margin auto
				display block
				max-width 100%
			&.vs-shown
				opacity 1
				
